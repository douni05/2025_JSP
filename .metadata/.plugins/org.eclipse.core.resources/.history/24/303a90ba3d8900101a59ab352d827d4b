<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<!-- numbers.jsp -->
	<%
		// 문자형으로 넘어오는 데이터를 숫자로 변환
		int num1 = Integer.parseInt(request.getParameter("num1"));
		int num2 = Integer.parseInt(request.getParameter("num2"));
		
		int sum = num1 + num2;
		int min = num1 - num2;
		int gob = num1 * num2;
		int nan = num1 / num2;
	%>
	<h3>사칙연산 결과</h3>
	<p><%=num1 %> + <%=num2 %> = <%=sum %>
	<p><%=num1 %> - <%=num2 %> = <%=min %>
	<p><%=num1 %> * <%=num2 %> = <%=gob %>
	<p><%=num1 %> / <%=num2 %> = <%=nan %>
</body>
</html>